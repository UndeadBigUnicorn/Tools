<% include common/header.ejs %>

<!--sign code start-->
<div class="card">
    <div class="card-content">
        <h1 class="title">
            <img src="/assets/img/logo.png" width="25" height="25" id="brand-img">
            <span>Registration</span>
        </h1>
        <div id="notification-api" class="notification is-warning">
                <button onclick="hide();return false" class="delete"></button>
                User with this email already exist!
        </div>
        <span>Create an account</span>
        <div class="fields">
            <div class="field">
                <p class="control has-icons-left has-icons-right">
                    <input id="email" class="input" type="email" placeholder="Email">
                    <span id="email-err" class="is-small is-danger"></span>
                    <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <p class="control has-icons-left">
                    <input id="password" class="input" type="password" placeholder="Password">
                    <span id="password-err" class="is-small is-danger"></span>
                    <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>
            <div class="field">
                <p class="control has-icons-left">
                    <input id="confirm-password" class="input" type="password" placeholder="Confirm password">
                    <span id="confirm-password-err" class="is-small is-danger"></span>
                    <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>
        </div>
        <button id="signup-btn" class="login-button button is-info is-medium is-fullwidth">Sign up</button>
    </div>
</div>
<!--signup code end-->

<% include common/footer.ejs %>

<script src="../assets/js/signup.js"></script>
<script>
    function hide(){
        $("#notification-api").hide();
    }
</script>
